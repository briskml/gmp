{
  "name": "gmp",
  "version": "6.1.2000",
  "esy": {
    "build": [
      "./configure --prefix=#{self.install} --enable-pic --enable-cxx",
      "make"
    ],
    "buildsInSource": true,
    "install": ["make install", "make -f Makepc pc"],
    "exportedEnv": {
      "PKG_CONFIG_PATH": {
        "val": "#{self.lib / 'pkgconfig' : $PKG_CONFIG_PATH}",
        "scope": "global"
      }
    }
  }
}
